<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/address1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@mipmap/shouhuodizhi" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/pencil" />

        <TextView
            android:id="@+id/tv_consignee_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView2"
          />

        <TextView
            android:id="@+id/tv_consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_consignee_address"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignStart="@+id/tv_consignee_address"
            android:layout_below="@+id/tv_consignee_address"
           />

        <TextView
            android:id="@+id/tv_consignee_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_consignee"
            android:layout_alignBottom="@+id/tv_consignee"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_address"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/dp_10">


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="请添加地址" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@mipmap/tianjia" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       />
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/address2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/address1"
       >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@mipmap/shopping" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/pencil" />

        <TextView
            android:id="@+id/tv_station_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView4"
          />

        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_station_address"
            android:layout_alignStart="@+id/tv_station_address"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv_station_address"
            />

        <TextView
            android:id="@+id/tv_station_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_station_name"
            android:layout_alignBottom="@+id/tv_station_name"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
             />
    </RelativeLayout>
</LinearLayout>