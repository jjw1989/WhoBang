<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    tools:context="com.whombang.app.features.sendtask.TextTaskActivity"
    android:orientation="vertical">
   <include layout="@layout/wb_titlebar_layout"/>
    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/common_titleBar"
        android:layout_height="200dp">

    </RelativeLayout>

    <EditText
        android:id="@+id/et_text_content"
        android:layout_below="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:hint="输入文字"
        android:background="@drawable/edittext_bg"
        android:minHeight="200dp"
        android:gravity="top|left"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/button_bg"
        android:visibility="gone"
        android:textColor="@color/white"
        android:text="确认发送" />

</RelativeLayout>
