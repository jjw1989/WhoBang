<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    android:orientation="vertical"
    tools:context="com.whombang.app.features.sendtask.TextTaskActivity">

    <include
        android:id="@+id/include"
        layout="@layout/wb_titlebar_layout" />

    <RelativeLayout
        android:id="@+id/address1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/include"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:src="@mipmap/shouhuodizhi" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/pencil" />

        <TextView
            android:id="@+id/tv_consignee_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView2"
            android:text="详情地址： 北京市昌平区回龙观龙禧苑三区北店嘉园1000楼五单元303室" />

        <TextView
            android:id="@+id/tv_consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_consignee_address"
            android:layout_alignStart="@+id/tv_consignee_address"
            android:layout_below="@+id/imageView2"
            android:text="收货人：超跑" />

        <TextView
            android:id="@+id/tv_consignee_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:text="18611766104" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/address1"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="32dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:src="@mipmap/shopping" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/pencil" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView4"
            android:text="详情地址： 北京市昌平区回龙观龙禧苑三区北店嘉园1000楼五单元303室" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/imageView4"
            android:text="收货人：超跑" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
            android:text="18611766104" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address2"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/edittext_bg"
        android:gravity="top|left"
        android:hint="输入文字"
        android:minHeight="200dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg"
        android:text="确认发送"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>
