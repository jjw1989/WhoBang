<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/phone" />

        <TextView
            android:id="@+id/tv_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignTop="@+id/imageView13"
            android:layout_toEndOf="@+id/imageView13"
            android:layout_toRightOf="@+id/imageView13"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_phone_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone_name"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_alignLeft="@+id/tv_phone_name"
            android:layout_alignStart="@+id/tv_phone_name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_phone_num"
            android:text="TextView1111111111111111111111111" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignBaseline="@+id/tv_phone_des"
            android:layout_alignBottom="@+id/tv_phone_des"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="TextView" />
    </RelativeLayout>
</LinearLayout>