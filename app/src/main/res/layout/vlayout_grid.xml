<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg" />
    <com.whombang.app.common.view.imageview.ExpandImageView
        android:id="@+id/img_goods_head"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:text="商品的名名字" />

        <TextView
            android:id="@+id/tv_sell_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_goods_name"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/tv_goods_name"
            android:layout_toRightOf="@+id/tv_goods_name"
            android:text="商品的规格" />

        <TextView
            android:id="@+id/tv_sell_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignLeft="@+id/tv_goods_name"
            android:layout_alignStart="@+id/tv_goods_name"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginTop="19dp"
            android:text="团购的价格" />

        <TextView
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignTop="@+id/tv_sell_price"
            android:layout_toEndOf="@+id/tv_sell_price"
            android:layout_toRightOf="@+id/tv_sell_price"
            android:text="原价" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_sell_price"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:text="团购倒计时"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>

